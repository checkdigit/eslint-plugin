{
  "name": "@checkdigit/eslint-plugin",
  "version": "3.0.0",
  "description": "Check Digit eslint plugins",
  "prettier": "@checkdigit/prettier-config",
  "main": "dist/index.js",
  "keywords": [
    "eslint",
    "eslintplugin"
  ],
  "scripts": {
    "preversion": "npm test",
    "postversion": "git push && git push --tags",
    "test": "tsc --noEmit && jest && npm run prettier && npm run lint",
    "lint": "eslint -f unix --ext .ts src/**",
    "prettier": "prettier --list-different 'src/**/*.ts'",
    "prettier:fix": "prettier --write 'src/**/*.ts'"
  },
  "engines": {
    "node": ">=16"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/checkdigit/eslint-plugin.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/checkdigit/eslint-plugin/issues"
  },
  "homepage": "https://github.com/checkdigit/eslint-plugin#readme",
  "peerDependencies": {
    "eslint": ">=8"
  },
  "devDependencies": {
    "@checkdigit/prettier-config": "^2.0.1",
    "@checkdigit/typescript-config": "^3.0.0",
    "@types/eslint": "^8.4.2",
    "@types/jest": "^27.5.1",
    "@types/node": "^17.0.36",
    "@typescript-eslint/eslint-plugin": "^5.27.0",
    "@typescript-eslint/parser": "^5.27.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-deprecate": "^0.7.0",
    "eslint-plugin-eslint-plugin": "^4.2.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-no-only-tests": "^2.6.0",
    "eslint-plugin-no-secrets": "^0.8.9",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-sonarjs": "^0.13.0",
    "jest": "^28.1.0",
    "ts-jest": "^28.0.3"
  },
  "jest": {
    "collectCoverage": true,
    "preset": "ts-jest",
    "testMatch": [
      "<rootDir>/src/**/?(*.)spec.ts"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/build",
      "<rootDir>/coverage",
      "<rootDir>/node_modules"
    ],
    "globals": {
      "ts-jest": {
        "isolatedModules": true,
        "diagnostics": false
      }
    }
  }
}
